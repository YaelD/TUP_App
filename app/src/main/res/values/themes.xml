<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TUPApp.light" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#BABABA</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="Theme.TUPApp.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.TUPApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TUPApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>